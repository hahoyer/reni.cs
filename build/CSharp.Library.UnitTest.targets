<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <!-- Settings for libraries -->

    <PropertyGroup>
        <OutputType>Library</OutputType>
    </PropertyGroup>

    <Import Project="CSharp.targets" />

    <!-- Unit test settings -->

    <ItemGroup>
        <Reference Include="nunit.framework, Version=2.4.0.2, Culture=neutral, PublicKeyToken=96d09a1eb7f44a77, processorArchitecture=MSIL">
            <SpecificVersion>False</SpecificVersion>
            <HintPath>$(BinDir)nunit\nunit.framework.dll</HintPath>
        </Reference>
    </ItemGroup>

    <PropertyGroup>
        <StartAction>Program</StartAction>
        <StartProgram>$(BinDir)\nunit\nunit-gui.exe</StartProgram>
        <StartArguments>Reni.dll</StartArguments>
    </PropertyGroup>

</Project>